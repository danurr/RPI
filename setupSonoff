cd /home/pi/HAP-NodeJS
if type mosquitto>/dev/null; then
      echo "Mosquitto already installed, continuing with install"
   else
      echo "Mosquitto not detected, installing Mosquitto now"
      if cat /etc/os-release | grep -q "jessie"; then
        clear
        sudo wget http://repo.mosquitto.org/debian/mosquitto-repo.gpg.key
        sudo apt-key add mosquitto-repo.gpg.key
        sudo rm -rf mosquitto-repo.gpg.key
        cd /etc/apt/sources.list.d/
        sudo wget http://repo.mosquitto.org/debian/mosquitto-jessie.list
        sudo apt-get update
        sudo apt-get install mosquitto mosquitto-clients -y
      elif cat /etc/os-release | grep -q "stretch"; then
        clear
        echo "stretch set as raspbian release"
        sleep 1
        wget http://ftp.us.debian.org/debian/pool/main/libw/libwebsockets/libwebsockets8_2.0.3-2_armhf.deb
        wget http://ftp.us.debian.org/debian/pool/main/o/openssl/libssl1.0.0_1.0.2l-1~bpo8+1_armhf.deb
        wget http://repo.mosquitto.org/debian/pool/main/m/mosquitto/mosquitto_1.5-0mosquitto1_armhf.deb
        sudo apt-get install libuv1 libev4 -y
        sudo dpkg -i libssl1.0.0_1.0.2l-1~bpo8+1_armhf.deb
        sudo dpkg -i libwebsockets8_2.0.3-2_armhf.deb
        sudo dpkg -i mosquitto_1.5-0mosquitto1_armhf.deb
        sudo rm -rf libssl1.0.0_1.0.2l-1~bpo8+1_armhf.deb
        sudo rm -rf libwebsockets8_2.0.3-2_armhf.deb
        sudo rm -rf mosquitto_1.5-0mosquitto1_armhf.deb
      fi
fi
cd /home/pi/HAP-NodeJS
sudo npm install mqtt --save
cd accessories/
sudo wget https://goo.gl/EI1rr3 -O SonoffMQTT_accessory.js
clear
